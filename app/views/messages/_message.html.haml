.message
  .message-list__area
    %p.message-list__area__name
      = message.user.name
    %p.message-list__area__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-text
    - if message.content.present?
      %p.message-text__text
        = message.content
    = image_tag message.image.url, class: 'lmessage-list__text__image' if message.image.present?

