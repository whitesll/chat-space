.side_bar
  .user
    .user__area
      %p.user__area__name
        = current_user.name
      .user__area__item
        .user__area__item__edit-user
          = link_to new_group_path do
            = icon('fa', 'edit')
        .user__area__item__new-group
          = link_to edit_user_path(current_user) do
            = icon('fa', 'cog')     
  .group
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .group-area
          %p.group-area__group-name
            = group.name
          %p.group-area__group-messages
            = group.show_last_message